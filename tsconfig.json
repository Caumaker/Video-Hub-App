{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "strictTemplates": true
  },
  "compilerOptions": {
    "paths": {
      "@pipes": ["src/app/pipes"]
    },
    "baseUrl": "",
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "removeComments": true,
    "sourceMap": true,
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "i18n",
    "interfaces",
    "src/main.ts"
  ]
}
